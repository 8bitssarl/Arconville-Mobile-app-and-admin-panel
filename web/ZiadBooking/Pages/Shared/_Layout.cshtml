<body>
    <div id="header-nav">
        <img id="logo" src="~/images/logo.jpg" alt="logo">

        <div class="links-divs">
            <a class="header-nav-links" href="/Index">HOME</a>
        </div>
        @{
            if (Models.SessionHelper.CanSeePage(Context, "users"))
            {
                <div class="links-divs">
                    <a class="header-nav-links" href="/Users">RESERVATIONS</a>
                </div>
            }
        }
        @{
            if (Models.SessionHelper.CanSeePage(Context, "reception"))
            {
                <div class="links-divs">
                    <a class="header-nav-links" href="/Reception">RECEPTION</a>
                </div>
            }
        }

        @{
            if (Models.SessionHelper.CanSeePage(Context, "reports"))
            {
                <div class="links-divs">
                    <a class="header-nav-links" href="/Reports">REPORTS</a>
                </div>
            }
        }
        @{
            if (Models.SessionHelper.CanSeePage(Context, "users"))
            {
                <div class="links-divs">
                    <a class="header-nav-links" href="/ManagementUsers">MANAGEMENT USERS</a>
                </div>
            }
        }

        <button id="logout-button" onclick="window.location='/Logout';">LOGOUT</button>
        <div id="user-div-header">
            <img id="user-image-header" src="~/images/mickie-mouse.jpeg" alt="user-image">
            <div id="user-info-div">
                <span class="user-info-text" id="user-name">@Models.SessionHelper.GetUserName(Context)</span>
                <span class="user-info-text" id="user-status">Member</span>
            </div>
        </div>
    </div>
