@model ZiadBooking.Pages.ManagementUsersModel
@{
    ViewData["Title"] = "Management Users";
}

<h2>Management Users</h2>

@{ 
    List<Models.Admin> users = (List<Models.Admin>)ViewData["Users"];
}

<div class="add-new-container" style="margin-bottom: 15px;text-align: right">
    <a href="ManagementUser">+Add New User</a>
</div>

<table class="table table-bordered table-success table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email/Username</th>
            <th>UserType</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var u in users)
            {
                <tr>
                    <td>@u.Name</td>
                    <td>@u.Email</td>
                    <td>@u.UserType.ToUpper()</td>
                    <td>
                        <a href="/ManagementUser?id=@u.Id">Edit</a>
                        &nbsp;&nbsp;
                        <a href="/ManagementUser?id=@(u.Id)&action=delete" onclick="return confirm('Are you sure you want to delete?');" style="color:#FF0000;">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

